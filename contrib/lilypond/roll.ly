\paper {
  #(define dump-extents #t) % Optional: helps debug layout by showing bounding boxes
  ragged-right = ##t % Prevents justification of the final system to the right margin
  ragged-last-bottom = ##t % Prevents the last system from stretching to the bottom of the page
  paper-width = 3000\mm % Set to a large width, adjust as needed
  paper-height = 297\mm % Standard A4 height, can be adjusted
}
